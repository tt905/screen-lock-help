<?xml version="1.0" encoding="utf-8"?>
<device-admin>

    <!--  过用户授权自己的应用设备管理权限后，
          可以在代码中修改一些系统设置，
          需要在应用中配置一个xml，xml中声明相应的权限，
          这些权限基本代表了DeviceAdmin可以使用的能力
    -->
    <uses-policies>
        <!-- 密码长度限制 -->
        <limit-password />
        <!-- 监控屏幕解锁尝试次数 -->
        <watch-login />
        <!-- 更改锁屏密码 -->
        <reset-password />
        <!-- 锁屏(可实现一键锁屏功能) -->
        <force-lock />
        <!-- 清除所有数据 -->>
        <wipe-data />
        <!-- 设置锁屏密码的有效期 -->
        <expire-password />
        <!-- 设置存储设备加密 -->
        <encrypted-storage />
        <!-- 禁用相机 -->
        <disable-camera />
    </uses-policies>
</device-admin>